#ifndef CURSOR_H_
#define CURSOR_H_

#include "segmentlcd_individual.h"
#include <stdbool.h>

extern typedef enum {
    a = 1 << 0,  // Bit position 0
    b = 1 << 1,  // Bit position 1
    c = 1 << 2,  // Bit position 2
    d = 1 << 3,  // Bit position 3
    e = 1 << 4,  // Bit position 4
    f = 1 << 5,  // Bit position 5
    g = 1 << 6,  // Bit position 6
    h = 1 << 7,  // Bit position 7
    j = 1 << 8,  // Bit position 8
    k = 1 << 9,  // Bit position 9
    m = 1 << 10, // Bit position 10
    n = 1 << 11, // Bit position 11
    p = 1 << 12, // Bit position 12
    q = 1 << 13  // Bit position 13
} SegmentLCD_LowerCharSegments_TypeDef_Bits;

void init_cursor(SegmentLCD_LowerCharSegments_TypeDef CURSOR_POS[SEGMENT_LCD_NUM_OF_LOWER_CHARS]);
void moveUp(SegmentLCD_LowerCharSegments_TypeDef CURSOR_POS[SEGMENT_LCD_NUM_OF_LOWER_CHARS]);

#endif /* CURSOR_H_ */
