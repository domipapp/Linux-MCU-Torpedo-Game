#include "my_init.h"

void init_PB0(void){
  GPIO_PinModeSet(PB0_PORT, PB0_PIN, gpioModeInput, 0);
  GPIO_ExtIntConfig(PB0_PORT, PB0_PIN, PB0_PIN, false, true, true);
  NVIC_EnableIRQ(GPIO_ODD_IRQn);
}

void init_PB1(void){
  GPIO_PinModeSet(PB1_PORT, PB1_PIN, gpioModeInput, 0);
  GPIO_ExtIntConfig(PB1_PORT, PB1_PIN, PB1_PIN, false, true, true);
  NVIC_EnableIRQ(GPIO_EVEN_IRQn);
}

void init_lcd(void){
  SegmentLCD_Init(false);
}

StreamBufferHandle_t init_streamBuffer(void){
  StreamBufferHandle_t xStreamBuffer;
  StaticStreamBuffer_t xStreamBufferStruct;
  static uint8_t ucStorageBuffer[ STREAM_BUFFER_BYTES ];
  xStreamBuffer = xStreamBufferCreateStatic(sizeof(ucStorageBuffer), 0, ucStorageBuffer, &xStreamBufferStruct);
  return xStreamBuffer;
}
